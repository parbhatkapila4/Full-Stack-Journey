generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// From below we will write the schema
model users {
  id        Int     @id @default(autoincrement())
  username  String
  password  String
  firstName String
  lastName  String
  todo      todos[]
}

model todos {
  id          Int     @id @default(autoincrement())
  title       String
  description String
  done        Boolean
  userId      Int
  user        users   @relation(fields: [userId], references: [id])
}
